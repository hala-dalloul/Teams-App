<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTeam_Team">
    <EditText
        android:id="@+id/edName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="130dp"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/edCups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edName"
        />
    <ImageButton
        android:id="@+id/plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edCups"
        app:layout_constraintTop_toTopOf="@id/edCups"
        android:src="@drawable/plus1"
        android:scaleType="fitXY"
        android:background="@color/edit_text_selected"
        app:layout_constraintBottom_toBottomOf="@id/edCups"/>
    <ImageButton
        android:id="@+id/minus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edCups"
        app:layout_constraintTop_toTopOf="@id/edCups"
        android:src="@drawable/minus1"
        android:scaleType="fitXY"
        android:background="@color/edit_text_selected"
        app:layout_constraintBottom_toBottomOf="@id/edCups"/>

    <Button
        android:id="@+id/saveBT"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Save"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edCups"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>